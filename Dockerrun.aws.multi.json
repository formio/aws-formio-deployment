{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "certs",
      "host": {
        "sourcePath": "/var/app/current/certs"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "pdf-libs",
      "image": "IMAGE",
      "environment": [
        {
          "name": "PORT",
          "value": "8080"
        }
      ],
      "memory": 512
    },
    {
      "name": "pdf-converter",
      "image": "IMAGE",
      "environment": [
        {
          "name": "PORT",
          "value": "4000"
        },
        {
          "name": "PDFTOJSON_URL",
          "value": "http://pdf-libs:8080/pdf/pdf2json"
        }
      ],
      "memory": 1024,
      "links": [
        "pdf-libs"
      ]
    },
    {
      "name": "api-server",
      "image": "IMAGE",
      "environment": [
        {
          "name": "MONGO_CA",
          "value": "/src/certs/rds-combined-ca-bundle.pem"
        },
        {
          "name": "PDF_SERVER",
          "value": "http://pdf-server:4005"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "links": [
        "pdf-server"
      ],
      "memory": 1024,
      "mountPoints": [
        {
          "sourceVolume": "certs",
          "containerPath": "/src/certs"
        }
      ]
    },
    {
      "name": "pdf-server",
      "image": "PDF_IMAGE",
      "environment": [
        {
          "name": "MONGO_CA",
          "value": "/src/certs/rds-combined-ca-bundle.pem"
        }
      ],
      "memory": 1024,
      "mountPoints": [
        {
          "sourceVolume": "certs",
          "containerPath": "/src/certs"
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "api-server",
        "pdf-server"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d"
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
